# Librarian Environment Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# Supabase Configuration (required)
# =============================================================================
# Get these from `supabase status` after running `supabase start`

# Supabase API URL
SUPABASE_URL=http://localhost:54321

# Supabase anonymous key (safe for browser)
SUPABASE_ANON_KEY=your-anon-key-here

# Supabase service role key (backend only - NEVER expose to browser)
SUPABASE_SERVICE_KEY=your-service-key-here

# JWT secret for token verification
JWT_SECRET=your-jwt-secret-here

# Database connection URL
DATABASE_URL=postgresql://postgres:postgres@localhost:54322/postgres

# =============================================================================
# qBittorrent Configuration
# =============================================================================

QBITTORRENT_USERNAME=admin
QBITTORRENT_PASSWORD=adminadmin

# =============================================================================
# Metadata API Keys (optional but recommended)
# =============================================================================

# TheTVDB API key - https://thetvdb.com/api-information
TVDB_API_KEY=

# TMDB API key - https://www.themoviedb.org/settings/api
TMDB_API_KEY=

# =============================================================================
# Prowlarr/Jackett Configuration (optional)
# =============================================================================

PROWLARR_URL=http://localhost:9696
PROWLARR_API_KEY=

# =============================================================================
# Paths Configuration
# =============================================================================

# These are used when running outside Docker
# In Docker, these are mounted as volumes

MEDIA_PATH=/data/media
DOWNLOADS_PATH=/data/downloads
CACHE_PATH=/data/cache
